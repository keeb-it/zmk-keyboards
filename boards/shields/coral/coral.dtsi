#include <dt-bindings/zmk/matrix_transform.h>
#include "coral-layouts.dtsi"

&pico_spi { status = "disabled"; };
&pico_i2c0 { status = "disabled"; };
&pico_i2c1 { status = "disabled"; };
&pico_serial { status = "okay"; }; // NOTE: alias to &uart0

&physical_layout0 {
    kscan = <&kscan0>;
    transform = <&default_transform>;
};

/ {
    wired_split {
        compatible = "zmk,wired-split";
        device = <&pico_serial>;
    };

    chosen {
        zmk,physical-layout = &physical_layout0;
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;

        diode-direction = "col2row";

        row-gpios
            = <&gpio0 29 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 28 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 14 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;

        // NOTE: Below are LHS columns, RHS columns are different and re-defined in their respective .overlay files
        col-gpios
            = <&gpio0 1 (GPIO_ACTIVE_HIGH)>
            , <&gpio0 0 (GPIO_ACTIVE_HIGH)>
            , <&gpio0 27 (GPIO_ACTIVE_HIGH)>
            , <&gpio0 26 (GPIO_ACTIVE_HIGH)>
            , <&gpio0 15 (GPIO_ACTIVE_HIGH)>
            , <&gpio0 5 (GPIO_ACTIVE_HIGH)>
            ;
    };

    default_transform: default_transform {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <5>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)                  RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)                  RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)                  RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5) RC(4,5)  RC(4,6) RC(3,6) RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11)
                            RC(4,1) RC(4,2) RC(4,3) RC(4,4)                  RC(4,7) RC(4,8) RC(4,9) RC(4,10)
        >;
    };

    left_encoder: left_encoder {
        compatible = "alps,ec11";
        steps = <80>;
        status = "disabled";
    };

    right_encoder: right_encoder {
        compatible = "alps,ec11";
        steps = <80>;
        status = "disabled";
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder &right_encoder>;
        triggers-per-rotation = <20>;
    };
};
